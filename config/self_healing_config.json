{
  "system": {
    "name": "Ultimate Self-Healing Trading System",
    "version": "1.0.0",
    "environment": "production",
    "log_level": "INFO"
  },
  "data_healing": {
    "enabled": true,
    "gap_detection_window_hours": 24,
    "max_gap_fill_attempts": 3,
    "corruption_threshold": 0.05,
    "quality_check_interval_minutes": 15,
    "auto_repair_enabled": true,
    "alert_on_failures": true,
    "max_consecutive_failures": 5,
    "fallback_sources": ["binance", "kraken", "kucoin", "coinbase"],
    "predictive_check_enabled": true,
    "anomaly_detection_sensitivity": 0.95,
    "circuit_breaker_failure_threshold": 5,
    "circuit_breaker_recovery_timeout_seconds": 300
  },
  "endpoint_healing": {
    "enabled": true,
    "default_timeout_seconds": 30,
    "default_retry_attempts": 3,
    "backoff_factor": 0.3,
    "health_check_interval_seconds": 60,
    "circuit_breaker_threshold": 5,
    "circuit_breaker_recovery_timeout_seconds": 300,
    "load_balancing_enabled": true,
    "failover_enabled": true
  },
  "endpoints": {
    "trading_apis": [
      {
        "name": "aster_main",
        "url": "https://fapi.asterdex.com",
        "priority": 10,
        "rate_limit_requests": 100,
        "rate_limit_window_seconds": 60,
        "timeout_seconds": 30,
        "health_check_endpoint": "/fapi/v1/ping"
      },
      {
        "name": "aster_backup",
        "url": "https://testnet.asterdex.com",
        "priority": 5,
        "rate_limit_requests": 50,
        "rate_limit_window_seconds": 60,
        "timeout_seconds": 30,
        "health_check_endpoint": "/fapi/v1/ping"
      }
    ],
    "market_data": [
      {
        "name": "binance_api",
        "url": "https://api.binance.com",
        "priority": 8,
        "rate_limit_requests": 1200,
        "rate_limit_window_seconds": 60,
        "timeout_seconds": 30,
        "health_check_endpoint": "/api/v3/ping"
      },
      {
        "name": "kraken_api",
        "url": "https://api.kraken.com",
        "priority": 7,
        "rate_limit_requests": 15,
        "rate_limit_window_seconds": 45,
        "timeout_seconds": 30,
        "health_check_endpoint": "/0/public/Time"
      },
      {
        "name": "coinbase_api",
        "url": "https://api.coinbase.com",
        "priority": 6,
        "rate_limit_requests": 10000,
        "rate_limit_window_seconds": 3600,
        "timeout_seconds": 30,
        "health_check_endpoint": "/api/v3/ping"
      }
    ],
    "news_feeds": [
      {
        "name": "newsapi",
        "url": "https://newsapi.org/v2",
        "priority": 5,
        "rate_limit_requests": 100,
        "rate_limit_window_seconds": 43200,
        "timeout_seconds": 30,
        "health_check_endpoint": "/top-headlines?country=us&apiKey=test"
      },
      {
        "name": "cryptopanic",
        "url": "https://cryptopanic.com/api/v1",
        "priority": 4,
        "rate_limit_requests": 10,
        "rate_limit_window_seconds": 60,
        "timeout_seconds": 30,
        "health_check_endpoint": "/posts/"
      }
    ]
  },
  "monitoring": {
    "enabled": true,
    "dashboard_port": 8080,
    "metrics_interval_seconds": 60,
    "alerts_enabled": true,
    "alert_channels": ["log", "email"],
    "health_report_interval_minutes": 5,
    "emergency_repair_interval_minutes": 10,
    "performance_optimization_interval_hours": 1
  },
  "alerts": {
    "data_quality_threshold": 0.8,
    "endpoint_health_threshold": 0.8,
    "max_consecutive_failures_alert": 3,
    "email_alerts": {
      "enabled": false,
      "smtp_server": "smtp.gmail.com",
      "smtp_port": 587,
      "sender_email": "alerts@yourdomain.com",
      "recipient_emails": ["admin@yourdomain.com"]
    },
    "slack_alerts": {
      "enabled": false,
      "webhook_url": "https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK",
      "channel": "#trading-alerts"
    }
  },
  "performance": {
    "max_memory_usage_gb": 8,
    "max_cpu_usage_percent": 80,
    "connection_pool_size": 100,
    "request_timeout_seconds": 30,
    "cleanup_interval_hours": 1
  },
  "security": {
    "api_key_rotation_days": 30,
    "certificate_validation": true,
    "allowed_ip_ranges": [],
    "rate_limiting": true,
    "request_logging": true,
    "audit_trail": true
  }
}
