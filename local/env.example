# Aster DEX API Configuration
ASTER_API_KEY=your_aster_api_key_here
ASTER_API_SECRET=your_aster_api_secret_here
ASTER_BASE_URL=https://fapi.asterdex.com
ASTER_WS_URL=wss://fstream.asterdex.com

# GCP Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
BIGQUERY_DATASET=market_data
GCP_SERVICE_ACCOUNT_KEY=path/to/service-account-key.json

# Trading Configuration
INITIAL_BALANCE=10000.0
MAX_DAILY_LOSS=0.05
MAX_DRAWDOWN=0.15
TARGET_ANNUAL_RETURN=2.0

# Risk Management
MAX_PORTFOLIO_RISK=0.1
MAX_SINGLE_POSITION_RISK=0.05
MAX_CONCURRENT_POSITIONS=5
STOP_LOSS_THRESHOLD=0.03
TAKE_PROFIT_THRESHOLD=0.05

# Model Configuration
USE_DEEP_LEARNING=true
USE_REINFORCEMENT_LEARNING=true
USE_ENSEMBLE_METHODS=true
USE_ANOMALY_DETECTION=true

# Execution Settings
DEFAULT_EXECUTION_ALGORITHM=adaptive_vwap
MAX_SLIPPAGE=0.005
TRANSACTION_COST_BPS=5

# System Settings
LOG_LEVEL=INFO
REBALANCE_FREQUENCY_MINUTES=60
MODEL_UPDATE_FREQUENCY_HOURS=24
RISK_CHECK_FREQUENCY_MINUTES=15
ANOMALY_CHECK_FREQUENCY_MINUTES=5

# Monitoring & Alerting
ENABLE_SLACK_ALERTS=false
SLACK_WEBHOOK_URL=
ENABLE_EMAIL_ALERTS=false
EMAIL_ADDRESS=
ENABLE_PAGERDUTY=false
PAGERDUTY_API_KEY=

# Security
ENABLE_API_RATE_LIMITING=true
MAX_API_REQUESTS_PER_MINUTE=100
ENABLE_IP_WHITELIST=false
ALLOWED_IPS=

# Feature Flags
ENABLE_PAPER_TRADING=true
ENABLE_LIVE_TRADING=false
ENABLE_BACKTESTING=true
ENABLE_DASHBOARD=true

